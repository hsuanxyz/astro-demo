---
import Layout from "../components/Layout.astro";

const title = "Blog";
const allPosts = await Astro.glob('../pages/posts/*.{md,mdx}');
---

<Layout title={title}>
    <h1>Blog</h1>
    <ul>
      {allPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
    </ul>
</Layout>
